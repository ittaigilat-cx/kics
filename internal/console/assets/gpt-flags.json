{
  "api-key": {
    "flagType": "str",
    "shorthandFlag": "k",
    "defaultValue": "",
    "usage": "the openai api key with which to call GPT"
  },
  "query": {
    "flagType": "str",
    "shorthandFlag": "q",
    "defaultValue": "",
    "usage": "free-text description of the security vulnerability to check against"
  },
  "type": {
    "flagType": "str",
    "shorthandFlag": "t",
    "defaultValue": "",
    "usage": "the platform type of the security vulnerability"
  },
  "gpt-path": {
    "flagType": "str",
    "shorthandFlag": "p",
    "defaultValue": "",
    "usage": "path to scan\nexample: \"./somepath/somefile.txt\""
  },
  "gpt-output-name": {
    "flagType": "str",
    "shorthandFlag": "n",
    "defaultValue": "gpt-results",
    "usage": "results file name (extension is \".json\")"
  },
  "gpt-output-path": {
    "flagType": "str",
    "shorthandFlag": "o",
    "defaultValue": "",
    "usage": "directory path to store results"
  },
  "details": {
    "flagType": "bool",
    "shorthandFlag": "d",
    "defaultValue": "false",
    "usage": "output all GPT response into separate text file (with extension \".txt\") named as result filename with \"-details\" suffix"
  }
}
